<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/queHacer"
            android:layout_width="219dp"
            android:layout_height="54dp"
            android:layout_marginTop="28dp"
            android:text="@string/que_quieres_hacer"
            android:textAlignment="center"
            android:textSize="@dimen/dimens_titulo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnToPerfil"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/btnToPerfil"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/ic_baseline_perfil"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.05"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.050000012" />

        <Button
            android:id="@+id/btnToMensajes"
            style="@style/botonesMP"
            android:layout_width="0dp"
            android:text="@string/missatges"
            app:icon="@drawable/ic_baseline_mensaje"
            app:iconTint="@color/mensajesBG"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/queHacer"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/btnToUsuarios"
            style="@style/botonesMP"
            android:layout_width="0dp"
            android:text="@string/usuarios"
            app:icon="@drawable/ic_baseline_usuarios"
            app:iconTint="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnToMensajes"
            app:layout_constraintVertical_bias="0.0" />


        <Button
            android:id="@+id/btnToSalir"
            style="@style/botonesMP"
            android:layout_width="0dp"
            android:text="@string/cerrar_sesion"
            app:icon="@drawable/ic_baseline_salir"
            app:iconTint="#000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnToUsuarios"
            app:layout_constraintVertical_bias="0.041" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>